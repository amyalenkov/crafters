<div id="top" class="navbar navbar-inverse navbar-static-top">

  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 logo">
        <a href="/"><h1>CraftsMan</h1></a>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 menu_left">
        <div id="imaginary_container">
          <div class="input-group stylish-input-group">
            <%= form_tag('/search', :method => :get, :class => 'search') do %>
                <%= text_field_tag 'search', nil, :placeholder => 'Поиск в каталоге. Например, "ИП Анатолий"', :autocomplete => 'off', :class => 'search_input' %>
                <%= submit_tag 'OK', :class => 'search_button' %>
            <% end %>
          </div>
        </div>
        <div id="search_result" style="display: none">
          <div class="search_result">
            <span>X</span>
            <ul id="result_search_ul">
              <%= render 'layouts/search' %>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 menu_right">
        <% if crafter_signed_in? %>
            <%= render 'layouts/crafters_registered' %>
        <% elsif user_signed_in? %>
            <%= render 'layouts/users_registered' %>
        <% else %>
            <%= render 'layouts/unregistered' %>
        <% end %>
      </div>
    </div>

    <div class="navigation">
          <%= render 'layouts/caregories' %>
    </div>


  </div>


</div>
