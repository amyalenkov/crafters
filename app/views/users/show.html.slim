.container-fluid
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      h2
        | Личный кабинет 
        = current_user.name
      br
      .avatar
        = image_tag current_user.avatar.url
      .description.description_show
        p
          b
            | Логин:
          = current_user.name
        p
          b
            | Email:
          = current_user.email
        p
          = link_to 'Редактировать профиль', edit_user_path
