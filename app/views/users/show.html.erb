<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h2>Личный кабинет <%= current_user.name %></h2><br/>
      <div class="avatar">
        <%= image_tag current_user.avatar.url %>
      </div>
      <div class="description">
        <p><b>Логин:</b> <%= current_user.name %></p>
        <p><b>Email:</b> <%= current_user.email %></p>
        <p><%= link_to 'Редактировать профиль', edit_user_registration_path %></p>
      </div>
    </div>
  </div>
</div>